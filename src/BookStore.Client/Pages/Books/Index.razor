@page "/books"
@using Microsoft.AspNetCore.SignalR.Client
@inject IBookApiClient BookApi
@inject IJSRuntime JS
@inject IConfiguration Configuration
@implements IAsyncDisposable

<PageTitle>Books - BookStore</PageTitle>

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h2 mb-1" style="color: #2c3e50;">
                <i class="bi bi-book me-2"></i>Book Inventory
            </h1>
            <p class="text-muted mb-0">Manage your book collection</p>
        </div>
        <button class="btn btn-primary btn-lg" @onclick="FetchBooksFromApi" disabled="@_isFetching">
            @if (_isFetching)
            {
                <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                <span>Fetching...</span>
            }
            else
            {
                <i class="bi bi-cloud-download me-2"></i>
                <span>Fetch Books</span>
            }
        </button>
    </div>

    <div class="card border-0 shadow-sm mb-4" style="background-color: #f8f9fa;">
        <div class="card-body py-2 px-3">
            <div class="d-flex align-items-center">
                <i class="bi bi-clock-history me-2 text-muted"></i>
                <small class="text-muted">
                    <strong>Fetch Job Status:</strong>
                    @if (_jobStatus?.IsRunning == true)
                    {
                        <span class="ms-2">
                            <span class="spinner-border spinner-border-sm text-primary me-1" role="status"></span>
                            Running...
                        </span>
                    }
                    else if (_jobStatus?.LastExecutionTime.HasValue == true)
                    {
                        <span class="ms-2">
                            Last run: <strong>@_jobStatus.LastExecutionTime.Value.ToLocalTime().ToString("MMM d, yyyy HH:mm:ss")</strong>
                            @if (_jobStatus.LastBooksAdded.HasValue)
                            {
                                <span class="badge bg-info ms-2">@_jobStatus.LastBooksAdded books added</span>
                            }
                        </span>
                    }
                    else
                    {
                        <span class="ms-2 text-muted">Not yet executed</span>
                    }
                    @if (_hubConnection?.State == HubConnectionState.Connected)
                    {
                        <span class="badge bg-success ms-2"><i class="bi bi-broadcast me-1"></i>Live</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary ms-2"><i class="bi bi-broadcast me-1"></i>Disconnected</span>
                    }
                </small>
            </div>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(_message))
    {
        <div class="alert @(_isError ? "alert-danger" : "alert-success") alert-dismissible fade show" role="alert">
            <i class="bi @(_isError ? "bi-exclamation-triangle" : "bi-check-circle") me-2"></i>
            @_message
            <button type="button" class="btn-close" @onclick="ClearMessage" aria-label="Close"></button>
        </div>
    }

    @if (_isLoading)
    {
        <div class="d-flex justify-content-center align-items-center" style="min-height: 300px;">
            <div class="text-center">
                <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
                <p class="mt-3 text-muted">Loading books...</p>
            </div>
        </div>
    }
    else if (_books == null || !_books.Any())
    {
        <div class="card border-0 shadow-sm">
            <div class="card-body text-center py-5">
                <i class="bi bi-inbox text-muted" style="font-size: 4rem;"></i>
                <h4 class="mt-3 text-muted">No Books Found</h4>
                <p class="text-muted">Click "Fetch Books" to load books from the external API.</p>
            </div>
        </div>
    }
    else
    {
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-white border-bottom py-3">
                <div class="d-flex justify-content-between align-items-center">
                    <span class="fw-semibold" style="color: #2c3e50;">
                        <i class="bi bi-list-ul me-2"></i>@_books.Count() Books
                    </span>
                </div>
            </div>
            <div class="table-responsive">
                <table class="table table-hover mb-0 align-middle">
                    <colgroup>
                        <col style="width: auto;" />
                        <col style="width: auto;" />
                        <col />
                        <col style="width: auto;" />
                        <col style="width: auto;" />
                        <col style="width: auto;" />
                    </colgroup>
                    <thead style="background-color: #f8f9fa;">
                        <tr>
                            <th class="px-3 py-3 text-nowrap">#</th>
                            <th class="py-3 text-nowrap">Title</th>
                            <th class="py-3">Description</th>
                            <th class="py-3 text-center text-nowrap" style="min-width: 170px;">Copies</th>
                            <th class="py-3 text-center text-nowrap" style="min-width: 170px;">Price</th>
                            <th class="py-3 text-center text-nowrap">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var book in _books)
                        {
                            <tr>
                                <td class="px-3 align-top text-nowrap pt-3">
                                    <span class="badge bg-secondary">@book.Number</span>
                                </td>
                                <td class="align-top text-nowrap pt-3">
                                    <div class="fw-semibold" style="color: #2c3e50;">@book.DisplayTitle</div>
                                    <small class="text-muted">@book.DisplayReleaseDate</small>
                                </td>
                                <td class="align-top pt-3" style="max-width: 1px; width: 100%;">
                                    @if (_expandedDescriptionId == book.Id)
                                    {
                                        <div class="text-muted small rounded" 
                                             style="background-color: #f8f9fa; cursor: pointer; white-space: normal; margin-top: 2px; padding: 0 8px 8px 8px;"
                                             @onclick="() => ToggleDescription(book.Id)">
                                            @book.DisplayDescription
                                            <div class="text-end mt-1">
                                                <small class="text-primary"><i class="bi bi-chevron-up"></i> Collapse</small>
                                            </div>
                                        </div>
                                    }
                                    else
                                    {
                                        @if (_truncatedBooks.Contains(book.Id))
                                        {
                                            <div id="desc-@book.Id" 
                                                 class="text-muted small text-truncate" 
                                                 style="cursor: pointer; margin-top: 2px;"
                                                 @onclick="() => ToggleDescription(book.Id)"
                                                 title="Click to expand">
                                                @book.DisplayDescription
                                            </div>
                                        }
                                        else
                                        {
                                            <div id="desc-@book.Id" 
                                                 class="text-muted small text-truncate"
                                                 style="margin-top: 2px;">
                                                @book.DisplayDescription
                                            </div>
                                        }
                                    }
                                </td>
                                <td class="text-center align-top text-nowrap pt-3">
                                    @if (_editingCopiesId == book.Id)
                                    {
                                        <div class="input-group input-group-sm" style="min-width: 120px;">
                                            <input type="number" class="form-control text-center" 
                                                   @bind="_editCopiesValue" min="0" max="100000" />
                                            <button class="btn btn-success" @onclick="() => SaveCopies(book.Id)" 
                                                    disabled="@_isSaving">
                                                <i class="bi bi-check"></i>
                                            </button>
                                            <button class="btn btn-outline-secondary" @onclick="CancelEditCopies">
                                                <i class="bi bi-x"></i>
                                            </button>
                                        </div>
                                    }
                                    else
                                    {
                                        <span class="badge bg-info text-dark" 
                                              @onclick="() => StartEditCopies(book)" 
                                              style="cursor: pointer;" 
                                              title="Click to edit">
                                            @book.DisplayNumberOfCopies
                                        </span>
                                    }
                                </td>
                                <td class="text-center align-top text-nowrap pt-3">
                                    @if (_editingPriceId == book.Id)
                                    {
                                        <div class="input-group input-group-sm" style="min-width: 140px;">
                                            <span class="input-group-text">â‚¬</span>
                                            <input type="number" class="form-control text-center" 
                                                   @bind="_editPriceValue" min="0" max="9999.99" step="0.01" />
                                            <button class="btn btn-success" @onclick="() => SavePrice(book.Id)"
                                                    disabled="@_isSaving">
                                                <i class="bi bi-check"></i>
                                            </button>
                                            <button class="btn btn-outline-secondary" @onclick="CancelEditPrice">
                                                <i class="bi bi-x"></i>
                                            </button>
                                        </div>
                                    }
                                    else
                                    {
                                        <span class="badge bg-success" 
                                              @onclick="() => StartEditPrice(book)" 
                                              style="cursor: pointer;"
                                              title="Click to edit">
                                            @book.DisplayPrice
                                        </span>
                                    }
                                </td>
                                <td class="text-center align-top text-nowrap pt-3">
                                    <div class="btn-group btn-group-sm">
                                        <button class="btn btn-outline-primary" 
                                                @onclick="() => StartEditCopies(book)"
                                                title="Edit copies">
                                            <i class="bi bi-boxes"></i>
                                        </button>
                                        <button class="btn btn-outline-success" 
                                                @onclick="() => StartEditPrice(book)"
                                                title="Edit price">
                                            <i class="bi bi-currency-euro"></i>
                                        </button>
                                        <button class="btn btn-outline-danger" 
                                                @onclick="() => RemoveBook(book.Id)"
                                                title="Remove book">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>

@code {
    private IEnumerable<BookViewModel>? _books;
    private bool _isLoading = true;
    private bool _isFetching = false;
    private bool _isSaving = false;
    private string? _message;
    private bool _isError = false;

    private Guid? _editingCopiesId;
    private int _editCopiesValue;
    private Guid? _editingPriceId;
    private decimal _editPriceValue;
    private Guid? _expandedDescriptionId;
    private HashSet<Guid> _truncatedBooks = new();
    private HubConnection? _hubConnection;
    private JobStatus? _jobStatus;

    private class JobStatus
    {
        public DateTime? LastExecutionTime { get; set; }
        public int? LastBooksAdded { get; set; }
        public bool IsRunning { get; set; }
    }

    protected override async Task OnInitializedAsync()
    {
        await LoadBooks();
        await StartSignalRConnection();
    }

    private async Task StartSignalRConnection()
    {
        var apiBaseAddress = Configuration["ApiBaseAddress"] ?? "http://localhost:5029";
        var hubUrl = $"{apiBaseAddress}/hubs/books";

        _hubConnection = new HubConnectionBuilder()
            .WithUrl(hubUrl)
            .WithAutomaticReconnect()
            .Build();

        _hubConnection.On<int>("BooksUpdated", async (booksAdded) =>
        {
            ShowMessage($"{booksAdded} new book(s) added by scheduled job.", false);
            await LoadBooks();
            await InvokeAsync(StateHasChanged);
        });

        _hubConnection.On<JobStatus>("JobStatusUpdate", async (status) =>
        {
            _jobStatus = status;
            await InvokeAsync(StateHasChanged);
        });

        try
        {
            await _hubConnection.StartAsync();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"SignalR connection failed: {ex.Message}");
        }
    }

    public async ValueTask DisposeAsync()
    {
        if (_hubConnection is not null)
        {
            await _hubConnection.DisposeAsync();
        }
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (_books != null && _books.Any())
        {
            await DetectTruncatedDescriptions();
        }
    }

    private async Task DetectTruncatedDescriptions()
    {
        if (_books == null) return;

        var changed = false;
        foreach (var book in _books)
        {
            if (_expandedDescriptionId == book.Id) continue;
            
            try
            {
                var isTruncated = await JS.InvokeAsync<bool>("isTextTruncated", $"desc-{book.Id}");
                if (isTruncated && !_truncatedBooks.Contains(book.Id))
                {
                    _truncatedBooks.Add(book.Id);
                    changed = true;
                }
                else if (!isTruncated && _truncatedBooks.Contains(book.Id))
                {
                    _truncatedBooks.Remove(book.Id);
                    changed = true;
                }
            }
            catch
            {
            }
        }

        if (changed)
        {
            StateHasChanged();
        }
    }

    private async Task LoadBooks()
    {
        _isLoading = true;
        try
        {
            _books = await BookApi.GetAllBooksAsync();
        }
        catch (Exception ex)
        {
            ShowMessage($"Failed to load books: {ex.Message}", true);
        }
        finally
        {
            _isLoading = false;
        }
    }

    private async Task FetchBooksFromApi()
    {
        _isFetching = true;
        ClearMessage();
        try
        {
            var result = await BookApi.FetchBooksAsync();
            ShowMessage(result.Message, false);
            await LoadBooks();
        }
        catch (Exception ex)
        {
            ShowMessage($"Failed to fetch books: {ex.Message}", true);
        }
        finally
        {
            _isFetching = false;
        }
    }

    private void StartEditCopies(BookViewModel book)
    {
        CancelEditPrice();
        _editingCopiesId = book.Id;
        _editCopiesValue = book.NumberOfCopies;
    }

    private void CancelEditCopies()
    {
        _editingCopiesId = null;
        _editCopiesValue = 0;
    }

    private async Task SaveCopies(Guid bookId)
    {
        _isSaving = true;
        try
        {
            var success = await BookApi.UpdateCopiesAsync(bookId, _editCopiesValue);
            if (success)
            {
                var book = _books?.FirstOrDefault(b => b.Id == bookId);
                ShowMessage($"Copies updated successfully for book {book?.Number}!", false);
                await LoadBooks();
            }
            else
            {
                ShowMessage("Failed to update copies.", true);
            }
        }
        catch (Exception ex)
        {
            ShowMessage($"Error: {ex.Message}", true);
        }
        finally
        {
            _isSaving = false;
            CancelEditCopies();
        }
    }

    private void StartEditPrice(BookViewModel book)
    {
        CancelEditCopies();
        _editingPriceId = book.Id;
        _editPriceValue = book.Price;
    }

    private void CancelEditPrice()
    {
        _editingPriceId = null;
        _editPriceValue = 0;
    }

    private async Task SavePrice(Guid bookId)
    {
        _isSaving = true;
        _editPriceValue = Math.Round(_editPriceValue, 2);
        try
        {
            var success = await BookApi.UpdatePriceAsync(bookId, _editPriceValue);
            if (success)
            {
                var book = _books?.FirstOrDefault(b => b.Id == bookId);
                ShowMessage($"Price updated successfully for book {book?.Number}!", false);
                await LoadBooks();
            }
            else
            {
                ShowMessage("Failed to update price.", true);
            }
        }
        catch (Exception ex)
        {
            ShowMessage($"Error: {ex.Message}", true);
        }
        finally
        {
            _isSaving = false;
            CancelEditPrice();
        }
    }

    private void ShowMessage(string message, bool isError)
    {
        _message = message;
        _isError = isError;
    }

    private void ClearMessage()
    {
        _message = null;
        _isError = false;
    }

    private void ToggleDescription(Guid bookId)
    {
        _expandedDescriptionId = _expandedDescriptionId == bookId ? null : bookId;
    }

    private async Task RemoveBook(Guid bookId)
    {
        try
        {
            var success = await BookApi.DeleteBookAsync(bookId);
            if (success)
            {
                ShowMessage("Book deleted successfully!", false);
                await LoadBooks();
            }
            else
            {
                ShowMessage("Failed to delete book.", true);
            }
        }
        catch (Exception ex)
        {
            ShowMessage($"Error: {ex.Message}", true);
        }
    }

    private static string TruncateDescription(string description, int maxLength)
    {
        if (string.IsNullOrEmpty(description) || description.Length <= maxLength)
            return description;
        
        return description.Substring(0, maxLength) + "...";
    }
}
