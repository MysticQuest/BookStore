FROM mcr.microsoft.com/dotnet/sdk:9.0 AS build
WORKDIR /src

COPY BookStore.sln .
COPY src/BookStore.Client/BookStore.Client.csproj src/BookStore.Client/

RUN dotnet restore src/BookStore.Client/BookStore.Client.csproj

COPY src/BookStore.Client/ src/BookStore.Client/
RUN dotnet publish src/BookStore.Client/BookStore.Client.csproj -c Release -o /app/publish

FROM nginx:alpine AS runtime
COPY --from=build /app/publish/wwwroot /usr/share/nginx/html
COPY nginx.conf /etc/nginx/nginx.conf
EXPOSE 80
